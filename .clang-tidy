
UseColor: true
WarningsAsErrors: '*'
HeaderFilterRegex: '.*'
FormatStyle: file

HeaderFileExtensions:
  - h
  - ih
  - hh

ImplementationFileExtensions:
  - cc

SystemHeaders: false


Checks: '
-*, 
bugprone-*, 
cert-*, 
concurrency-*, 
cppcoreguidelines-*, 
misc-*, 
modernize-*, 
performance-*, 
portability-*, 
readability-*,
-bugprone-argument-comment, 
-readability-braces-around-statements, 
-bugprone-easily-swappable-parameters, 
-cert-dcl59-cpp, 
-cppcoreguidelines-avoid-c-arrays, 
-cppcoreguidelines-owning-memory, 
-cppcoreguidelines-pro-bounds-*, 
-misc-include-cleaner,
-misc-no-recursion, 
-modernize-avoid-c-arrays, 
-modernize-use-equals-default,
-modernize-use-equals-delete,
-modernize-shrink-to-fit, 
-modernize-pass-by-value,
-modernize-use-ranges, 
-modernize-use-trailing-return-type, 
-performance-enum-size, 
-portability-restrict-system-includes, 
-readability-avoid-const-params-in-decls, 
-readability-avoid-nested-conditional-operator, 
-readability-operators-representation, 
-readability-use-anyofallof, 
-readability-use-std-min-max,
fuchsia-multiple-inheritance, 
fuchsia-statically-constructed-objects, 
# google-global-names-in-headers, does not work well with .ih, I think?
google-readability-casting, 
google-runtime-int, 
hicpp-multiway-paths-covered, 
hicpp-no-assembler, 
hicpp-signed-bitwise, 
llvm-namespace-comment'


CheckOptions:
  # Reasonable limits on function size
  - key: readability-function-size.StatementThreshold
    value: '35'
  - key: readability-function-size.LineThreshold
    value: '45'
  - key: readability-function-size.ParameterThreshold
    value: '5'
  - key: readability-function-size.VariableThreshold
    value: '8'
  - key: readability-function-size.CountMemberInitAsStmt
    value: 'true'

  # forbid SLV
  - key: readability-identifier-length.MinimumVariableNameLength
    value: '2'
  - key: readability-identifier-length.IgnoredVariableNames
    value: ''
  - key: readability-identifier-length.MinimumParameterNameLength
    value: '2'
  - key: readability-identifier-length.IgnoredParameterNames
    value: ''
  - key: readability-identifier-length.MinimumLoopCounterNameLength
    value: '2'
  - key: readability-identifier-length.IgnoredLoopCounterNames
    value: ''
  - key: readability-identifier-length.MinimumExceptionNameLength
    value: '2'
  - key: readability-identifier-length.IgnoredExceptionVariableNames
    value: ''
